<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorBlack</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="fontFamily">@font/font_regular_times</item>
        <item name="android:fontFamily">@font/font_regular_times</item>
    </style>

    // TODO check : Splash

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorBlack</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="windowActionModeOverlay">true</item>

        <!--Required Api 21 above-->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="fontFamily">@font/font_regular_times</item>
        <item name="android:fontFamily">@font/font_regular_times</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="fontFamily">@font/font_regular_times</item>
        <item name="android:fontFamily">@font/font_regular_times</item>
    </style>

    <style name="CustomButtonStyle">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:background">@drawable/orange_bg_10sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_45sdp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:includeFontPadding">false</item>
        <!--        <item name="font_btn">@string/font_times_bold</item>-->
        <item name="fontFamily">@font/font_bold_times</item>
        <item name="android:fontFamily">@font/font_bold_times</item>
    </style>

    <style name="CustomTextViewStyle">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:includeFontPadding">false</item>
        <!--        <item name="font_text">@string/font_times_regular</item>-->
        <item name="fontFamily">@font/font_regular_times</item>
        <item name="android:fontFamily">@font/font_regular_times</item>
        <item name="android:lineSpacingExtra">@dimen/_3sdp</item>
    </style>

    <style name="CustomEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textColorHint">@color/colorDarkGray</item>
        <item name="android:singleLine">true</item>
        <item name="android:importantForAutofill" tools:targetApi="o">no</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">text</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <!--        <item name="font_et">@string/font_times_regular</item>-->
        <item name="fontFamily">@font/font_regular_times</item>
        <item name="android:fontFamily">@font/font_regular_times</item>
    </style>

