    <style name="Seek_Bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:max">10</item>
        <item name="android:progress">0</item>
        <item name="fontFamily">@font/font_regular_times</item>
        <item name="android:fontFamily">@font/font_regular_times</item>
    </style>

    <style name="Widget.App.Tooltip" parent="Widget.MaterialComponents.Tooltip">
        <item name="android:textAppearance">@style/TextAppearance.App.Tooltip</item>
        <item name="backgroundTint">@color/colorWhite</item>
        <item name="fontFamily">@font/font_regular_times</item>
        <item name="android:fontFamily">@font/font_regular_times</item>
    </style>

    <style name="TextAppearance.App.Tooltip" parent="TextAppearance.MaterialComponents.Tooltip">
        <item name="android:textColor">@color/colorOrange</item>
        <item name="android:background">@drawable/ic_show_range_bg</item>
        <item name="background">@drawable/ic_show_range_bg</item>
        <item name="android:fontFamily">@font/font_bold_times</item>
        <item name="fontFamily">@font/font_bold_times</item>
    </style>

    <style name="swStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:clickable">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/font_regular_times</item>
        <item name="android:fontFamily">@font/font_regular_times</item>
    </style>

    <style name="Widget.App.Spinner" parent="@style/Widget.AppCompat.Spinner">
        <item name="overlapAnchor">true</item>
        <item name="android:background">@drawable/ic_spinner</item>
        <item name="fontFamily">@font/font_regular_times</item>
        <item name="android:fontFamily">@font/font_regular_times</item>
    </style>

    <style name="customfontstyle" parent="@android:style/TextAppearance.Small">
<!--        <item name="android:fontFamily">@string/font_times_bold</item>-->
<!--        <item name="fontFamily">>@string/font_times_bold</item>-->
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/font_bold_times</item>
        <item name="android:fontFamily">@font/font_bold_times</item>
    </style>

    <style name="countryPicker">
<!--        <item name="android:fontFamily">@string/font_times_bold</item>-->
<!--        <item name="fontFamily">>@string/font_times_bold</item>-->
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/font_bold_times</item>
        <item name="android:fontFamily">@font/font_bold_times</item>
    </style>

    <style name="MyTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tabIndicatorColor">@color/colorOrange</item>
        <item name="tabRippleColor">@color/colorPrimaryDark</item>
        <item name="tabSelectedTextColor">@color/colorOrange</item>
        <item name="tabTextColor">@color/colorBlack</item>
        <item name="tabIndicator">@drawable/tab_indicator</item>
<!--        <item name="android:fontFamily">@font/font_bold_times</item>-->
        <item name="fontFamily">@font/font_bold_times</item>
        <item name="android:fontFamily">@font/font_bold_times</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_14ssp</item>
<!--        <item name="android:fontFamily">@font/font_bold_times</item>-->
        <item name="fontFamily">@font/font_bold_times</item>
        <item name="android:fontFamily">@font/font_bold_times</item>
    </style>

    <style name="menuStyle">
        <!--        <item name="android:layoutDirection">rtl</item>-->
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">15sp</item>
<!--        <item name="android:fontFamily">@font/font_regular_times</item>-->
        <item name="fontFamily">@font/font_regular_times</item>
        <item name="android:fontFamily">@font/font_regular_times</item>
    </style>

    <style name="full_screen_dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="fontFamily">@font/font_regular_times</item>
        <item name="android:fontFamily">@font/font_regular_times</item>
    </style>


    <style name="MyDialogStyle" parent="android:Theme.Holo.Dialog">
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="fontFamily">@font/font_regular_times</item>
        <item name="android:fontFamily">@font/font_regular_times</item>
    </style>

    <style name="action_button_bs">
        <item name="android:textColor">@color/colorOrange</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
    </style>

