<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

    <com.plugspace.view.CustomTextView
        android:id="@+id/tvDateTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="@dimen/_15sdp"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_14ssp"
        app:font_text="@string/font_times_bold"
        tools:text="12/28/2020 (MM/DD/YYYY)" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_32sdp"
        android:background="@drawable/chat_reply_bg"
        android:orientation="horizontal">

        <com.plugspace.view.CustomTextView
            android:id="@+id/tvSubTextMsg"
            style="@style/CustomTextViewStyle"
            android:autoLink="web"
            android:layout_width="wrap_content"
            android:gravity="start"
            android:justificationMode="inter_word"
            android:linksClickable="true"
            android:padding="@dimen/_15sdp"
            android:singleLine="false"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_12ssp"
            app:font_text="@string/font_times_regular"
            tools:text="Haha truly! Nice to meet you! What about a cup of coffee today evening? â˜•" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:orientation="horizontal">

        <com.plugspace.view.CustomTextView
            android:id="@+id/tvSubTime"
            style="@style/CustomTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:singleLine="true"
            android:textColor="@color/colorOrange"
            android:textSize="@dimen/_10ssp"
            app:font_text="@string/font_times_bold"
            tools:text="5:32 PM" />

    </LinearLayout>

</LinearLayout>