<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_16sdp"
    android:background="@drawable/shape_rect_gradient_edit_text"
    android:orientation="vertical"
    android:padding="@dimen/_16sdp"
    tools:context=".fragment.EditProfileFragment">


    <com.plugspace.view.CustomTextView
        style="@style/CustomTextViewStyle"
        android:gravity="start"
        android:singleLine="false"
        android:text="@string/preferred_age_range"
        android:textSize="@dimen/_16ssp"
        app:font_text="@string/font_times_bold" />

    <com.google.android.material.slider.RangeSlider
        android:id="@+id/rsRangeMrgAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_40sdp"
        android:stepSize="1"
        android:value="20"
        android:valueFrom="18"
        android:valueTo="100"
        app:labelStyle="@style/Widget.App.Tooltip"
        app:thumbColor="@color/colorOrange"
        app:tickColor="@color/colorLightYellow"
        app:trackColor="@color/colorLightYellow"
        app:values="@array/initial_range_slider_values" />

    <com.plugspace.view.CustomButton
        android:id="@+id/btnDone"
        style="@style/CustomButtonStyle"
        android:layout_height="@dimen/_42sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="@string/done" />


</LinearLayout>