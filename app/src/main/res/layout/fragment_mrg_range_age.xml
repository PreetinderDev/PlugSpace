<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    tools:context=".fragment.MrgRangeAgeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.plugspace.view.CustomTextView
            style="@style/CustomTextViewStyle"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:gravity="start"
            android:singleLine="false"
            android:text="@string/preferred_age_range_for_date_marriage"
            android:textSize="@dimen/_20ssp"
            app:font_text="@string/font_times_bold" />

        <com.google.android.material.slider.RangeSlider
            android:id="@+id/rsRangeMrgAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_40sdp"
            android:stepSize="1"
            android:value="20"
            android:valueFrom="18"
            android:valueTo="100"
            app:labelStyle="@style/Widget.App.Tooltip"
            app:thumbColor="@color/colorOrange"
            app:tickColor="@color/colorLightYellow"
            app:trackColor="@color/colorLightYellow"
            app:values="@array/initial_range_slider_values" />

        <com.plugspace.view.CustomButton
            android:id="@+id/btnNext"
            style="@style/CustomButtonStyle"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="@string/next" />


    </LinearLayout>

</LinearLayout>