<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightBlack">

    <ImageView
        android:id="@+id/ivPreviewImg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_place_holder_photo"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/_16sdp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/llStory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/white_10sdp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/_15sdp">

            <ImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:src="@drawable/ic_story" />

            <com.plugspace.view.CustomTextView
                style="@style/CustomTextViewStyle"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:text="@string/story"
                android:textColor="@color/colorOrange"
                android:textSize="@dimen/_20sdp"
                app:font_text="@string/font_times_bold" />

        </LinearLayout>

        <View
            android:layout_width="@dimen/_16sdp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/llFeed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/white_10sdp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/_15sdp">

            <ImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:src="@drawable/ic_feed" />

            <com.plugspace.view.CustomTextView
                style="@style/CustomTextViewStyle"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:text="@string/feed"
                android:textColor="@color/colorOrange"
                android:textSize="@dimen/_20sdp"
                app:font_text="@string/font_times_bold" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>