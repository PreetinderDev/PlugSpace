<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_16sdp"
        android:background="@drawable/shape_rect_gradient_edit_text"
        android:elevation="@dimen/_1sdp"
        android:orientation="vertical"
        android:padding="@dimen/_16sdp"
        app:layout_constraintTop_toTopOf="parent">

        <com.plugspace.view.CustomTextView
            style="@style/CustomTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_8sdp"
            android:singleLine="false"
            android:text="Report"
            android:textColor="@color/colorOrange"
            android:textSize="@dimen/_18ssp"
            android:textStyle="bold"
            app:font_text="@string/font_times_bold" />

        <!--        <View-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="@dimen/_1sdp"-->
        <!--            android:layout_marginTop="@dimen/_8sdp"-->
        <!--            android:layout_marginBottom="@dimen/_4sdp"-->
        <!--            android:background="@color/colorPrimary" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/_16sdp"
            android:background="@drawable/orange_border2_10sdp"
            android:orientation="horizontal">

            <com.plugspace.view.CustomEditText
                android:id="@+id/etReason"
                style="@style/CustomEditTextStyle"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="top|start"
                android:hint="@string/hint_enter_reason"
                android:imeOptions="actionDone"
                android:inputType="textCapSentences|textMultiLine"
                android:maxLines="5"
                android:minLines="5"
                android:padding="@dimen/_15sdp"
                android:singleLine="false" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            android:orientation="horizontal">

            <com.plugspace.view.CustomButton
                style="@style/CustomButtonStyle"
                android:layout_width="0dp"
                android:id="@+id/btnCancel"
                android:background="@drawable/orange_border_10sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_weight="1"
                android:layout_height="@dimen/_42sdp"
                android:textColor="@color/colorOrange"
                android:text="@string/cancel"
                android:textAllCaps="true" />

            <com.plugspace.view.CustomButton
                style="@style/CustomButtonStyle"
                android:layout_width="0dp"
                android:id="@+id/btnSubmit"
                android:layout_height="@dimen/_42sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_weight="1"
                android:text="@string/submit"
                android:textAllCaps="true" />

        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>