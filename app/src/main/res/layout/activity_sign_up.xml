<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.SignUpActivity"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

    <RelativeLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/ic_common_bottom_corner_round" />

        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.plugspace.view.CustomTextView
                    android:id="@+id/tvTitle"
                    style="@style/CustomTextViewStyle"
                    android:text="@string/sign_up_process"
                    android:textSize="@dimen/_18ssp"
                    app:font_text="@string/font_times_bold" />

                <ImageView
                    android:id="@+id/ivBackArrow"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:rotation="180"
                    android:padding="@dimen/_7sdp"
                    android:src="@drawable/ic_next_arrow"/>

            </RelativeLayout>

            <include layout="@layout/common_swipe_scr"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/frmnt_Container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>