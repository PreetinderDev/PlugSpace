<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimaryDark"
    tools:context=".activities.ContactUsActivity"
    android:orientation="vertical">

    <include layout="@layout/common_toolbar" />

    <androidx.core.widget.NestedScrollView
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:orientation="vertical">

                <com.plugspace.view.CustomTextView
                    style="@style/CustomTextViewStyle"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:gravity="start"
                    android:text="@string/name"
                    android:textSize="@dimen/_14ssp"
                    app:font_text="@string/font_times_bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:outlineSpotShadowColor="@color/colorOrange"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardElevation="@dimen/_5sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <com.plugspace.view.CustomEditText
                            android:id="@+id/etName"
                            style="@style/CustomEditTextStyle"
                            android:layout_gravity="center"
                            android:background="@null"
                            android:hint="@string/enter_your_name"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:padding="@dimen/_15sdp"
                            android:text="@string/cristina_deo" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:orientation="vertical">

                <com.plugspace.view.CustomTextView
                    style="@style/CustomTextViewStyle"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:gravity="start"
                    android:text="@string/email"
                    android:textSize="@dimen/_14ssp"
                    app:font_text="@string/font_times_bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:outlineSpotShadowColor="@color/colorOrange"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardElevation="@dimen/_5sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <com.plugspace.view.CustomEditText
                            android:id="@+id/etEmail"
                            style="@style/CustomEditTextStyle"
                            android:layout_gravity="center"
                            android:background="@null"
                            android:hint="@string/enter_your_email"
                            android:imeOptions="actionNext"
                            android:inputType="textEmailAddress"
                            android:padding="@dimen/_15sdp"
                            tools:text="justin@gmail.com" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:orientation="vertical">

                <com.plugspace.view.CustomTextView
                    style="@style/CustomTextViewStyle"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:gravity="start"
                    android:text="@string/subject"
                    android:textSize="@dimen/_14ssp"
                    app:font_text="@string/font_times_bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:outlineSpotShadowColor="@color/colorOrange"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardElevation="@dimen/_5sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <com.plugspace.view.CustomEditText
                            android:id="@+id/etSubject"
                            style="@style/CustomEditTextStyle"
                            android:layout_gravity="center"
                            android:background="@null"
                            android:hint="@string/enter_subject"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:padding="@dimen/_15sdp"
                            tools:text="@string/help_with_payment" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:orientation="vertical">

                <com.plugspace.view.CustomTextView
                    style="@style/CustomTextViewStyle"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:gravity="start"
                    android:text="@string/message"
                    android:textSize="@dimen/_14ssp"
                    app:font_text="@string/font_times_bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:outlineSpotShadowColor="@color/colorOrange"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardElevation="@dimen/_5sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <com.plugspace.view.CustomEditText
                            android:id="@+id/etTypeMsg"
                            style="@style/CustomEditTextStyle"
                            android:layout_gravity="center"
                            android:background="@null"
                            android:hint="@string/type_your_msg"
                            android:lines="5"
                            android:gravity="start"
                            android:maxLines="5"
                            android:minLines="5"
                            android:inputType="textMultiLine"
                            android:padding="@dimen/_15sdp"
                            tools:text="" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <com.plugspace.view.CustomButton
                android:id="@+id/btnContinue"
                style="@style/CustomButtonStyle"
                android:layout_margin="@dimen/_15sdp"
                android:text="@string/submit" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>