<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/send_like_msg_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="@dimen/_10sdp"
        android:text="@string/send_a_message"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_18ssp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        android:background="@color/colorPrimary" />

    <EditText
        android:id="@+id/send_like_msg_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:minHeight="@dimen/_100sdp"
        android:gravity="start"
        android:maxLines="5"
        android:maxLength="150"
        android:hint="@string/message"
        android:textColorHint="@color/colorGray"
        android:textColor="@color/colorBlack"
        tools:ignore="RtlHardcoded"
        android:inputType="text|textMultiLine|textCapSentences"
        android:singleLine="false"
        android:background="@android:color/transparent"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/pre_defined_msg_rv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"/>

    <Button
        android:id="@+id/send_like_msg_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_gravity="center"
        android:text="@string/send_a_message"
        android:textColor="@color/colorPrimary"
        android:backgroundTint="@color/colorLightOrange"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/send_like_msg_cancel_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/_10sdp"
        android:text="@string/cancel"
        android:textAllCaps="false" />

</LinearLayout>