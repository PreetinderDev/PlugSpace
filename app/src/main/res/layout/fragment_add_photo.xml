<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    tools:context=".fragment.AddPhotoFragment">

    <com.plugspace.view.CustomTextView
        style="@style/CustomTextViewStyle"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:gravity="start"
        android:text="@string/add_photos"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_20ssp"
        app:font_text="@string/font_times_bold" />

    <ScrollView
        android:id="@+id/svPhotos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvPhoto1"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_120sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:outlineSpotShadowColor="@color/colorOrange"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardElevation="@dimen/_5sdp">

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_add_photo"
                        tools:ignore="ContentDescription" />

                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="match_parent" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvPhoto2"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_120sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:outlineSpotShadowColor="@color/colorOrange"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardElevation="@dimen/_5sdp">


                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_add_photo"
                        tools:ignore="ContentDescription" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <com.plugspace.view.CustomTextView
                style="@style/CustomTextViewStyle"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:gravity="start"
                android:singleLine="false"
                android:text="@string/note_add_2_photo_straight"
                android:textColor="@color/colorRed"
                android:textSize="@dimen/_12ssp"
                android:visibility="visible"
                app:font_text="@string/font_times_regular" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvPhoto3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:outlineSpotShadowColor="@color/colorOrange"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardElevation="@dimen/_5sdp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_120sdp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_add_photo"
                            tools:ignore="ContentDescription" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="match_parent" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvPhoto4"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_120sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:outlineSpotShadowColor="@color/colorOrange"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardElevation="@dimen/_5sdp">


                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_add_photo"
                        tools:ignore="ContentDescription" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:orientation="horizontal">

                <com.plugspace.view.CustomTextView
                    style="@style/CustomTextViewStyle"
                    android:layout_width="0dp"
                    android:layout_gravity="top"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:singleLine="false"
                    android:text="@string/note_add_full_size_body_pictures"
                    android:textColor="@color/colorRed"
                    android:textSize="@dimen/_12ssp"
                    android:visibility="visible"
                    app:font_text="@string/font_times_regular" />

                <View
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="match_parent" />

                <com.plugspace.view.CustomTextView
                    style="@style/CustomTextViewStyle"
                    android:layout_width="0dp"
                    android:layout_gravity="top"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:singleLine="false"
                    android:text="@string/note_add_multiple_fully"
                    android:textColor="@color/colorRed"
                    android:textSize="@dimen/_12ssp"
                    android:visibility="visible"
                    app:font_text="@string/font_times_regular" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvPhoto5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:outlineSpotShadowColor="@color/colorOrange"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardElevation="@dimen/_5sdp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_120sdp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_add_photo"
                            tools:ignore="ContentDescription" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="match_parent" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvPhoto6"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_120sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:outlineSpotShadowColor="@color/colorOrange"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardElevation="@dimen/_5sdp">


                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_add_photo"
                        tools:ignore="ContentDescription" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvPhoto7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:outlineSpotShadowColor="@color/colorOrange"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardElevation="@dimen/_5sdp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_120sdp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_add_photo"
                            tools:ignore="ContentDescription" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="match_parent" />

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_120sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:outlineSpotShadowColor="@color/colorOrange"
                    android:visibility="invisible"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardElevation="@dimen/_5sdp">


                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_add_photo"
                        tools:ignore="ContentDescription" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvModel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="@dimen/_4sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_weight="1"
        android:overScrollMode="never"
        tools:itemCount="2"
        tools:listitem="@layout/row_add_photos" />

    <com.plugspace.view.CustomButton
        android:id="@+id/btnNext"
        style="@style/CustomButtonStyle"
        android:layout_margin="@dimen/_15sdp"
        android:text="@string/next" />

</LinearLayout>