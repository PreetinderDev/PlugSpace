<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/llMyMusicChoice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_5sdp"
                            android:layout_marginHorizontal="@dimen/_5sdp"
                            android:outlineSpotShadowColor="@color/colorOrange"
                            app:cardBackgroundColor="@color/colorPrimaryDark"
                            app:cardCornerRadius="@dimen/_12sdp"
                            app:cardElevation="@dimen/_5sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/white_bg_10sdp_with_orange_border"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/ivTick"
                                    android:layout_width="@dimen/_22sdp"
                                    android:layout_height="@dimen/_22sdp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_music" />

                                <com.plugspace.view.CustomTextView
                                    android:id="@+id/tvSettingOptions"
                                    style="@style/CustomTextViewStyle"
                                    android:layout_width="wrap_content"
                                    android:layout_marginStart="@dimen/_15sdp"
                                    android:gravity="start"
                                    android:paddingTop="@dimen/_15sdp"
                                    android:paddingBottom="@dimen/_15sdp"
                                    android:text="@string/my_music_choice"
                                    android:textColor="@color/colorOrange"
                                    android:textSize="@dimen/_14ssp"
                                    android:textAllCaps="true"
                                    app:font_text="@string/font_times_bold" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <com.plugspace.view.CustomTextView
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        style="@style/CustomTextViewStyle"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:gravity="start"
                        android:text="@string/about_me2"
                        android:textColor="@color/colorOrange"
                        android:textSize="@dimen/_16ssp"
                        app:font_text="@string/font_times_bold" />

                    <com.plugspace.view.CustomTextView
                        android:id="@+id/tvAboutMe"
                        style="@style/CustomTextViewStyle"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="start"
                        android:justificationMode="inter_word"
                        android:singleLine="false"
                        android:text="@string/hi_all_my"
                        android:textSize="@dimen/_14ssp"
                        app:font_text="@string/font_times_regular" />

                    <com.plugspace.view.CustomTextView
                        style="@style/CustomTextViewStyle"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:gravity="start"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:text="@string/i_considered_my_self_a"
                        android:textSize="@dimen/_14ssp"
                        app:font_text="@string/font_times_bold" />

                    <LinearLayout
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_5sdp"
                            android:layout_marginHorizontal="@dimen/_5sdp"
                            android:outlineSpotShadowColor="@color/colorOrange"
                            app:cardBackgroundColor="@color/colorPrimaryDark"
                            app:cardCornerRadius="@dimen/_12sdp"
                            app:cardElevation="@dimen/_5sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/white_bg_10sdp_with_orange_border"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <com.plugspace.view.CustomTextView
                                    android:id="@+id/tvConsiderMySelf"
                                    style="@style/CustomTextViewStyle"
                                    android:layout_width="match_parent"
                                    android:gravity="start"
                                    android:textColor="@color/colorBlack"
                                    android:padding="@dimen/_17sdp"
                                    android:text="@string/feminine"
                                    android:textSize="@dimen/_12ssp"
                                    app:font_text="@string/font_times_regular" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <com.plugspace.view.CustomTextView
                        style="@style/CustomTextViewStyle"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:gravity="start"
                        android:text="@string/basic_info"
                        android:textColor="@color/colorOrange"
                        android:textSize="@dimen/_16ssp"
                        app:font_text="@string/font_times_bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="@dimen/_30sdp"
                                        android:layout_height="@dimen/_30sdp"
                                        android:src="@drawable/ic_height_preview" />

                                    <com.plugspace.view.CustomTextView
                                        android:id="@+id/tvHeight"
                                        style="@style/CustomTextViewStyle"
                                        android:layout_width="wrap_content"
                                        android:layout_marginStart="@dimen/_8sdp"
                                        android:gravity="start"
                                        android:text="@string/_5ft_9inch"
                                        android:textSize="@dimen/_13ssp"
                                        app:font_text="@string/font_times_regular" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_15sdp"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="@dimen/_30sdp"
                                        android:layout_height="@dimen/_30sdp"
                                        android:src="@drawable/ic_weight_preview" />

                                    <com.plugspace.view.CustomTextView
                                        android:id="@+id/tvWeight"
                                        style="@style/CustomTextViewStyle"
                                        android:layout_width="wrap_content"
                                        android:layout_marginStart="@dimen/_8sdp"
                                        android:gravity="start"
                                        android:text="145 lbs"
                                        android:textSize="@dimen/_13ssp"
                                        app:font_text="@string/font_times_regular" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_15sdp"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="@dimen/_30sdp"
                                        android:layout_height="@dimen/_30sdp"
                                        android:src="@drawable/ic_children" />

                                    <com.plugspace.view.CustomTextView
                                        android:id="@+id/tvChildren"
                                        style="@style/CustomTextViewStyle"
                                        android:layout_width="wrap_content"
                                        android:layout_marginStart="@dimen/_8sdp"
                                        android:gravity="start"
                                        android:text="@string/_2"
                                        android:textSize="@dimen/_13ssp"
                                        app:font_text="@string/font_times_regular" />

                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="@dimen/_30sdp"
                                        android:layout_height="@dimen/_30sdp"
                                        android:src="@drawable/ic_relationship_status" />

                                    <com.plugspace.view.CustomTextView
                                        android:id="@+id/tvRelationStatus"
                                        style="@style/CustomTextViewStyle"
                                        android:layout_width="wrap_content"
                                        android:layout_marginStart="@dimen/_8sdp"
                                        android:gravity="start"
                                        android:text="@string/definitely_single"
                                        android:textSize="@dimen/_13ssp"
                                        app:font_text="@string/font_times_regular" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_15sdp"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="@dimen/_30sdp"
                                        android:layout_height="@dimen/_30sdp"
                                        android:src="@drawable/ic_ethnicity" />

                                    <com.plugspace.view.CustomTextView
                                        android:id="@+id/tvDesEthnicity"
                                        style="@style/CustomTextViewStyle"
                                        android:layout_width="wrap_content"
                                        android:layout_marginStart="@dimen/_8sdp"
                                        android:gravity="start"
                                        android:text="@string/asian"
                                        android:textSize="@dimen/_13ssp"
                                        app:font_text="@string/font_times_regular" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/llMakeOver"
                                    android:layout_marginEnd="@dimen/_15sdp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="@dimen/_30sdp"
                                        android:layout_height="@dimen/_30sdp"
                                        android:src="@drawable/ic_make_over" />

                                    <com.plugspace.view.CustomTextView
                                        android:id="@+id/tvSalary"
                                        style="@style/CustomTextViewStyle"
                                        android:layout_width="wrap_content"
                                        android:layout_marginStart="@dimen/_8sdp"
                                        android:gravity="start"
                                        android:text="@string/_1_60_000"
                                        android:textSize="@dimen/_13ssp"
                                        app:font_text="@string/font_times_regular" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="@dimen/_30sdp"
                                        android:layout_height="@dimen/_30sdp"
                                        android:src="@drawable/ic_dress_size" />

                                    <com.plugspace.view.CustomTextView
                                        android:id="@+id/tvDressSize"
                                        style="@style/CustomTextViewStyle"
                                        android:layout_width="wrap_content"
                                        android:layout_marginStart="@dimen/_8sdp"
                                        android:gravity="start"
                                        android:text="@string/_2"
                                        android:textSize="@dimen/_13ssp"
                                        app:font_text="@string/font_times_regular" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_15sdp"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="@dimen/_30sdp"
                                        android:layout_height="@dimen/_30sdp"
                                        android:src="@drawable/ic_engaged" />

                                    <com.plugspace.view.CustomTextView
                                        android:id="@+id/tvEngagement"
                                        style="@style/CustomTextViewStyle"
                                        android:layout_width="wrap_content"
                                        android:layout_marginStart="@dimen/_8sdp"
                                        android:gravity="start"
                                        android:text="@string/_2"
                                        android:textSize="@dimen/_13ssp"
                                        app:font_text="@string/font_times_regular" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_15sdp"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="@dimen/_30sdp"
                                        android:layout_height="@dimen/_30sdp"
                                        android:src="@drawable/ic_tattoo" />

                                    <com.plugspace.view.CustomTextView
                                        android:id="@+id/tvTattoo"
                                        style="@style/CustomTextViewStyle"
                                        android:layout_width="wrap_content"
                                        android:layout_marginStart="@dimen/_8sdp"
                                        android:gravity="start"
                                        android:text="@string/_2"
                                        android:textSize="@dimen/_13ssp"
                                        app:font_text="@string/font_times_regular" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvPreview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:itemCount="2"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:overScrollMode="never"
                    tools:listitem="@layout/row_post_list_preview" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>