<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="@dimen/_15sdp"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    android:paddingTop="@dimen/_5sdp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_412sdp"
        android:elevation="0dp"
        app:cardCornerRadius="@dimen/_10sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/rivPostImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_place_holder_photo"
                app:riv_corner_radius="@dimen/_10sdp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/ic_black_shadow"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/_15sdp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.plugspace.view.CustomTextView
                        android:id="@+id/tvNameAge"
                        style="@style/CustomTextViewStyle"
                        android:gravity="start"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_16ssp"
                        app:font_text="@string/font_times_bold"
                        tools:text="Kylie, 28" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_12sdp"
                            android:layout_height="@dimen/_12sdp"
                            android:src="@drawable/ic_job" />

                        <com.plugspace.view.CustomTextView
                            android:id="@+id/tvEducation"
                            style="@style/CustomTextViewStyle"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:gravity="start"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/_10ssp"
                            app:font_text="@string/font_times_regular"
                            tools:text="@string/designer_at_ibm" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_12sdp"
                            android:layout_height="@dimen/_12sdp"
                            android:src="@drawable/ic_education" />

                        <com.plugspace.view.CustomTextView
                            android:id="@+id/tvDegree"
                            style="@style/CustomTextViewStyle"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:gravity="start"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/_10ssp"
                            app:font_text="@string/font_times_regular"
                            tools:text="@string/advanced_degree" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <ImageView
                            android:layout_width="@dimen/_12sdp"
                            android:layout_height="@dimen/_12sdp"
                            android:src="@drawable/ic_white_location" />

                        <com.plugspace.view.CustomTextView
                            android:id="@+id/tvLocation"
                            style="@style/CustomTextViewStyle"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:ellipsize="end"
                            android:gravity="start"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/_10ssp"
                            app:font_text="@string/font_times_regular"
                            tools:text="Surat, India." />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="end"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivLike"
                        android:layout_width="@dimen/_32sdp"
                        android:layout_height="@dimen/_32sdp"
                        android:padding="@dimen/_4sdp"
                        android:src="@drawable/ic_like_normal" />

                    <LinearLayout
                        android:id="@+id/llRealityRank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:orientation="vertical">

                        <com.plugspace.view.CustomTextView
                            android:id="@+id/tvRank"
                            style="@style/CustomTextViewStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/_20ssp"
                            app:font_text="@string/font_times_bold"
                            tools:text="9" />

                        <ImageView
                            android:layout_width="@dimen/_18sdp"
                            android:layout_height="@dimen/_18sdp"
                            android:src="@drawable/ic_eye" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/ivDisLike"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/ic_cancel" />

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/ivBlock"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_alignParentEnd="true"
                android:layout_margin="@dimen/_8sdp"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_dots"
                android:tint="@color/colorWhite"
                tools:ignore="ContentDescription" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>