<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    tools:context=".activities.PreviewActivity">

    <include layout="@layout/common_toolbar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_weight="1"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="@dimen/_15sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_412sdp"
                    app:cardCornerRadius="@dimen/_10sdp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/ivFirstImg"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/bg_place_holder_photo"
                            tools:ignore="ContentDescription" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_100sdp"
                            android:layout_alignParentBottom="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_black_shadow"
                            tools:ignore="ContentDescription" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginHorizontal="@dimen/_15sdp"
                            android:layout_marginBottom="@dimen/_15sdp"
                            android:baselineAligned="false"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.8"
                                android:orientation="vertical">

                                <com.plugspace.view.CustomTextView
                                    android:id="@+id/tvNameAge"
                                    style="@style/CustomTextViewStyle"
                                    android:gravity="start"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="@dimen/_18ssp"
                                    app:font_text="@string/font_times_bold"
                                    tools:text="@string/cristina_deo2" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="@dimen/_18sdp"
                                        android:layout_height="@dimen/_18sdp"
                                        android:src="@drawable/ic_job"
                                        tools:ignore="ContentDescription,TooDeepLayout" />

                                    <com.plugspace.view.CustomTextView
                                        android:id="@+id/tvEducation"
                                        style="@style/CustomTextViewStyle"
                                        android:layout_marginStart="@dimen/_5sdp"
                                        android:gravity="start"
                                        android:textColor="@color/colorWhite"
                                        android:textSize="@dimen/_11ssp"
                                        app:font_text="@string/font_times_regular"
                                        tools:text="@string/designer_at_ibm" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_2sdp"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="@dimen/_18sdp"
                                        android:layout_height="@dimen/_18sdp"
                                        android:src="@drawable/ic_education"
                                        tools:ignore="ContentDescription" />

                                    <com.plugspace.view.CustomTextView
                                        android:id="@+id/tvJobTitle"
                                        style="@style/CustomTextViewStyle"
                                        android:layout_marginStart="@dimen/_5sdp"
                                        android:gravity="start"
                                        android:textColor="@color/colorWhite"
                                        android:textSize="@dimen/_11ssp"
                                        app:font_text="@string/font_times_regular"
                                        tools:text="@string/advanced_degree" />
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/llLocation"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_2sdp"
                                    android:orientation="horizontal"
                                    android:visibility="visible">

                                    <ImageView
                                        android:layout_width="@dimen/_18sdp"
                                        android:layout_height="@dimen/_18sdp"
                                        android:src="@drawable/ic_white_location"
                                        tools:ignore="ContentDescription" />

                                    <com.plugspace.view.CustomTextView
                                        android:id="@+id/tvLocation"
                                        style="@style/CustomTextViewStyle"
                                        android:layout_gravity="center"
                                        android:layout_marginStart="@dimen/_5sdp"
                                        android:gravity="start"
                                        android:textColor="@color/colorWhite"
                                        android:textSize="@dimen/_11ssp"
                                        app:font_text="@string/font_times_regular"
                                        tools:text="Surat, India." />
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="0.2"
                                android:orientation="vertical">

                                <com.plugspace.view.CustomTextView
                                    android:id="@+id/tvRank"
                                    style="@style/CustomTextViewStyle"
                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:background="@drawable/light_white_10sdp"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="@dimen/_20ssp"
                                    app:font_text="@string/font_times_bold"
                                    tools:text="@string/_9" />

                                <com.plugspace.view.CustomTextView
                                    android:id="@+id/tvConsiderMySelf"
                                    style="@style/CustomTextViewStyle"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:singleLine="false"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="@dimen/_14ssp"
                                    app:font_text="@string/font_times_bold"
                                    tools:text="@string/feminine" />

                            </LinearLayout>

                        </LinearLayout>

                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/llMyMusicChoice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_5sdp"
                            android:outlineSpotShadowColor="@color/colorOrange"
                            app:cardBackgroundColor="@color/colorPrimaryDark"
                            app:cardCornerRadius="@dimen/_12sdp"
                            app:cardElevation="@dimen/_5sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/white_bg_10sdp_with_orange_border"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/ivTick"
                                    android:layout_width="@dimen/_22sdp"
                                    android:layout_height="@dimen/_22sdp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_music"
                                    tools:ignore="ContentDescription" />

                                <com.plugspace.view.CustomTextView
                                    android:id="@+id/tvSettingOptions"
                                    style="@style/CustomTextViewStyle"
                                    android:layout_width="wrap_content"
                                    android:layout_marginStart="@dimen/_15sdp"
                                    android:gravity="start"
                                    android:paddingTop="@dimen/_15sdp"
                                    android:paddingBottom="@dimen/_15sdp"
                                    android:text="@string/my_music_choice"
                                    android:textAllCaps="true"
                                    android:textColor="@color/colorOrange"
                                    android:textSize="@dimen/_14ssp"
                                    app:font_text="@string/font_times_bold" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <com.plugspace.view.CustomTextView
                        style="@style/CustomTextViewStyle"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:gravity="start"
                        android:text="@string/about_me2"
                        android:textColor="@color/colorOrange"
                        android:textSize="@dimen/_16ssp"
                        app:font_text="@string/font_times_bold" />

                    <com.plugspace.view.CustomTextView
                        android:id="@+id/tvAboutMe"
                        style="@style/CustomTextViewStyle"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="start"
                        android:justificationMode="inter_word"
                        android:singleLine="false"
                        android:textSize="@dimen/_14ssp"
                        app:font_text="@string/font_times_regular"
                        tools:text="@string/hi_all_my" />

                    <com.plugspace.view.CustomTextView
                        style="@style/CustomTextViewStyle"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:gravity="start"
                        android:text="@string/basic_info"
                        android:textColor="@color/colorOrange"
                        android:textSize="@dimen/_16ssp"
                        app:font_text="@string/font_times_bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="@dimen/_30sdp"
                                        android:layout_height="@dimen/_30sdp"
                                        android:src="@drawable/ic_height_preview"
                                        tools:ignore="ContentDescription" />

                                    <com.plugspace.view.CustomTextView
                                        android:id="@+id/tvHeight"
                                        style="@style/CustomTextViewStyle"
                                        android:layout_width="wrap_content"
                                        android:layout_marginStart="@dimen/_8sdp"
                                        android:gravity="start"
                                        android:textSize="@dimen/_13ssp"
                                        app:font_text="@string/font_times_regular"
                                        tools:text="@string/_5ft_9inch" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_15sdp"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="@dimen/_30sdp"
                                        android:layout_height="@dimen/_30sdp"
                                        android:src="@drawable/ic_weight_preview"
                                        tools:ignore="ContentDescription" />

                                    <com.plugspace.view.CustomTextView
                                        android:id="@+id/tvWeight"
                                        style="@style/CustomTextViewStyle"
                                        android:layout_width="wrap_content"
                                        android:layout_marginStart="@dimen/_8sdp"
                                        android:gravity="start"
                                        android:textSize="@dimen/_13ssp"
                                        app:font_text="@string/font_times_regular"
                                        tools:text="145 lbs" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_15sdp"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="@dimen/_30sdp"
                                        android:layout_height="@dimen/_30sdp"
                                        android:src="@drawable/ic_children"
                                        tools:ignore="ContentDescription" />

                                    <com.plugspace.view.CustomTextView
                                        android:id="@+id/tvChildren"
                                        style="@style/CustomTextViewStyle"
                                        android:layout_width="wrap_content"
                                        android:layout_marginStart="@dimen/_8sdp"
                                        android:gravity="start"
                                        android:textSize="@dimen/_13ssp"
                                        app:font_text="@string/font_times_regular"
                                        tools:text="@string/_2" />

                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="@dimen/_30sdp"
                                        android:layout_height="@dimen/_30sdp"
                                        android:src="@drawable/ic_relationship_status"
                                        tools:ignore="ContentDescription" />

                                    <com.plugspace.view.CustomTextView
                                        android:id="@+id/tvRelationStatus"
                                        style="@style/CustomTextViewStyle"
                                        android:layout_width="wrap_content"
                                        android:layout_marginStart="@dimen/_8sdp"
                                        android:gravity="start"
                                        android:textSize="@dimen/_13ssp"
                                        app:font_text="@string/font_times_regular"
                                        tools:text="@string/definitely_single" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_15sdp"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="@dimen/_30sdp"
                                        android:layout_height="@dimen/_30sdp"
                                        android:src="@drawable/ic_ethnicity"
                                        tools:ignore="ContentDescription" />

                                    <com.plugspace.view.CustomTextView
                                        android:id="@+id/tvDescribe"
                                        style="@style/CustomTextViewStyle"
                                        android:layout_width="wrap_content"
                                        android:layout_marginStart="@dimen/_8sdp"
                                        android:gravity="start"
                                        android:textSize="@dimen/_13ssp"
                                        app:font_text="@string/font_times_regular"
                                        tools:text="@string/asian" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/llMakeOver"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/_15sdp"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="@dimen/_30sdp"
                                        android:layout_height="@dimen/_30sdp"
                                        android:src="@drawable/ic_make_over"
                                        tools:ignore="ContentDescription" />

                                    <com.plugspace.view.CustomTextView
                                        android:id="@+id/tvMakeOver"
                                        style="@style/CustomTextViewStyle"
                                        android:layout_width="wrap_content"
                                        android:layout_marginStart="@dimen/_8sdp"
                                        android:gravity="start"
                                        android:textSize="@dimen/_13ssp"
                                        app:font_text="@string/font_times_regular"
                                        tools:text="@string/_1_60_000" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="@dimen/_30sdp"
                                        android:layout_height="@dimen/_30sdp"
                                        android:src="@drawable/ic_dress_size"
                                        tools:ignore="ContentDescription" />

                                    <com.plugspace.view.CustomTextView
                                        android:id="@+id/tvDressSize"
                                        style="@style/CustomTextViewStyle"
                                        android:layout_width="wrap_content"
                                        android:layout_marginStart="@dimen/_8sdp"
                                        android:gravity="start"
                                        android:textSize="@dimen/_13ssp"
                                        app:font_text="@string/font_times_regular"
                                        tools:text="@string/_2" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_15sdp"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="@dimen/_30sdp"
                                        android:layout_height="@dimen/_30sdp"
                                        android:src="@drawable/ic_engaged"
                                        tools:ignore="ContentDescription" />

                                    <com.plugspace.view.CustomTextView
                                        android:id="@+id/tvEngagement"
                                        style="@style/CustomTextViewStyle"
                                        android:layout_width="wrap_content"
                                        android:layout_marginStart="@dimen/_8sdp"
                                        android:gravity="start"
                                        android:textSize="@dimen/_13ssp"
                                        app:font_text="@string/font_times_regular"
                                        tools:text="@string/_2" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_15sdp"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="@dimen/_30sdp"
                                        android:layout_height="@dimen/_30sdp"
                                        android:src="@drawable/ic_tattoo"
                                        tools:ignore="ContentDescription" />

                                    <com.plugspace.view.CustomTextView
                                        android:id="@+id/tvTattoo"
                                        style="@style/CustomTextViewStyle"
                                        android:layout_width="wrap_content"
                                        android:layout_marginStart="@dimen/_8sdp"
                                        android:gravity="start"
                                        android:textSize="@dimen/_13ssp"
                                        app:font_text="@string/font_times_regular"
                                        tools:text="@string/_2" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvModel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:overScrollMode="never"
                tools:itemCount="1"
                tools:listitem="@layout/row_preview" />


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>